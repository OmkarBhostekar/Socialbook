<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <size android:height="30dp"/>
            <corners android:radius="6dp"/>
            <stroke android:color="#84E2FB"
                android:width="1dp"/>
        </shape>
    </item>
    <item android:top="4dp" android:bottom="4dp" android:right="4dp" android:left="4dp">
        <scale android:scaleWidth="100%">
            <selector>
                <item android:state_enabled="false" android:drawable="@android:color/transparent"/>
                <item android:state_selected="true">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/colorPrimary"/>
                        <size android:height="40dp"/>
                        <corners android:bottomLeftRadius="4dp"
                            android:topLeftRadius="4dp"/>
                        <stroke android:color="@color/colorDarkBlue"
                            android:width="1dp"/>
                    </shape>
                </item>
                <item>
                    <shape android:shape="rectangle">
                        <solid android:color="#84E2FB"/>
                        <size android:height="30dp"/>
                        <corners android:radius="4dp"/>
                        <stroke android:color="#84E2FB"
                            android:width="1dp"/>
                    </shape>
                </item>
            </selector>
        </scale>
    </item>
</layer-list>